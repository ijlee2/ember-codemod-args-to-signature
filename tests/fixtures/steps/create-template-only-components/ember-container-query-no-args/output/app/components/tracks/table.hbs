<table data-test-table="Tracks">
  <thead>
    <tr>
      <th local-class="track-number">#</th>
      <th>Title</th>
      <th local-class="track-length">Length</th>
      <th local-class="track-is-explicit">Explicit</th>
    </tr>
  </thead>

  <tbody>
    {{#each @tracks as |track index|}}
      <tr data-test-row>
        <td>
          {{add index 1}}
        </td>
        <td data-test-column="Title">
          {{track.name}}
        </td>
        <td align="right" data-test-column="Length">
          {{track.length}}
        </td>
        <td align="center" data-test-column="Explicit">
          {{if track.isExplicit "Yes"}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>